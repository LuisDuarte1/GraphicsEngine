R"(
#version 330 core
layout(location = 0) in vec3 vertexPosition_modelspace;
layout(location = 1) in vec2 auvcoord;

out vec2 uvcoord;
out vec3 vec_color;

uniform mat4 MVP;
uniform vec3 in_light_color;

void main(){
  gl_Position = MVP * vec4(vertexPosition_modelspace,1);
  uvcoord = auvcoord;
  vec_color = in_light_color;
}

)"